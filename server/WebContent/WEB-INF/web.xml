<?xml version = "1.0" encoding = "UTF-8"?> 
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"  
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"  
 id="WebApp_ID" version="3.0"> 

	<display-name>Sharebooks application</display-name>
	<description>The application is for people who love books</description>



  	<servlet>
    	<servlet-name>JerseyServlet</servlet-name>
    	<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    	<init-param> 
            <param-name>jersey.config.server.provider.packages</param-name> 
            <param-value>com.sharebooks.rest.resources</param-value> 
        </init-param> 
  	</servlet>

  	<servlet-mapping>
    	<servlet-name>JerseyServlet</servlet-name>
   	 	<url-pattern>/rest/*</url-pattern>
  	</servlet-mapping>
  	
  	
  	
  	
  	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>


  
  
  
  	<context-param>
    	<param-name>SHAREBOOKS_DB_TYPE</param-name>
    	<param-value>MYSQL</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>SHAREBOOKS_DB_HOST</param-name>
    	<param-value>localhost</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>SHAREBOOKS_DB_PORT</param-name>
    	<param-value>3306</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>SHAREBOOKS_DB_USERNAME</param-name>
    	<param-value>root</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>SHAREBOOKS_DB_PASSWORD</param-name>
    	<param-value>root</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>BOOK_CACHE_TYPE</param-name>
    	<param-value>LRU</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>BOOK_CACHE_CAPACITY</param-name>
    	<param-value>200</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>USER_CACHE_TYPE</param-name>
    	<param-value>LRU</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>USER_CACHE_CAPACITY</param-name>
    	<param-value>50</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>CONNECTION_POOL_TYPE</param-name>
    	<param-value>MYSQL</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>SHAREBOOKS_CONNECTION_POOL_CAPACITY</param-name>
    	<param-value>100</param-value>
  	</context-param>
  
  	<context-param>
    	<param-name>DAO_TYPE</param-name>
    	<param-value>MYSQL</param-value>
  	</context-param>
  
  	<context-param>
  		<param-name>LOGGER_CONFIG_FILE_PATH</param-name>
  		<param-value>/sharebooks/WebContent/WEB-INF/loggerConfig.properties</param-value>
  	</context-param>
</web-app> 